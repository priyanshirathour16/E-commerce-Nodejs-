<% layout('layouts/boilerplate') -%> <%- include('../partials/success') %>

<section class="d-flex flex-wrap gap-5 justify-content-center">
  <% for( let item of products) { %>
  <div class="card" style="width: 18rem">
    <img src="<%= item.img %>" class="card-img-top" alt="..." />
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <h5 class="card-title"><%= item.name %></h5>
        <h5>
          <% if ( currentUser && currentUser.wishList.includes(item._id)) { %>
          <i
            class="fa-solid fa-heart product-like-btn heart1"
            product-like="<%= item._id %>"
          ></i>
          <% } else { %>
          <i
            class="fa-regular fa-heart product-like-btn heart1"
            product-like="<%= item._id %>"
          ></i>
          <% } %>
        </h5>
      </div>
      <h5>$ <%= item.price %></h5>
      <p class="card-text"><%= item.desc %></p>
      <a href="/products/<%= item._id %>" class="btn btn-primary btn-sm"
        >Buy Now</a
      >
    </div>
  </div>
  <% } %>
</section>
<script src="/js/like.js"></script>
